  "expectation": {
    "status": 200,
    "errors": [],
    "caseData": {
      "template": "minimal-appeal-started.json",
      "replacements": {
        "appealReferenceNumber": "$/(.+)/",
        "homeOfficeDecisionDate": "{$TODAY-14}",
        "remissionType": "helpWithFees",
        "feeRemissionType": "Help with Fees",
        "paymentStatus": null,
        "paAppealTypePaymentOption": null
